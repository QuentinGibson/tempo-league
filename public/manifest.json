{
  "manifest_version": 1,
  "type": "WebApp",
  "meta": {
    "name": "Tempo League",
    "author": "quentmadeit",
    "version": "1.0.0",
    "minimum-overwolf-version": "0.160.0",
    "description": "Convert your champion's attack speed into a visual BPM pulse on your second monitor",
    "dock_button_title": "Tempo League",
    "icon": "icons/tempo_icon.png",
    "icon_gray": "icons/tempo_icon_gray.png",
    "launcher_icon": "icons/tempo_icon.ico",
    "window_icon": "icons/tempo_icon.png"
  },
  "permissions": [
    "Hotkeys",
    "GameInfo"
  ],
  "data": {
    "start_window": "background",
    "hotkeys": {
      "tempo_league_toggle": {
        "title": "Show/Hide In-Game Overlay",
        "action-type": "toggle",
        "default": "Ctrl+L"
      }
    },
    "protocol_override_domains": {
      "googlesyndication": "http"
    },
    "externally_connectable": {
      "matches": [
        "http://*.overwolf.com",
        "https://*.overwolf.com",
        "https://ddragon.leagueoflegends.com"
      ]
    },
    "force_browser": "user",
    "windows": {
      "background": {
        "file": "background.html",
        "background_optimization": true,
        "is_background_page": true
      },
      "desktop": {
        "file": "desktop.html",
        "desktop_only": true,
        "native_window": true,
        "resizable": true,
        "transparent": true,
        "override_on_update": true,
        "size": {
          "width": 1212,
          "height": 699
        },
        "min_size": {
          "width": 1212,
          "height": 699
        }
      },
      "desktop_second": {
        "file": "desktop_second.html",
        "desktop_only": true,
        "native_window": true,
        "resizable": true,
        "transparent": true,
        "override_on_update": true,
        "show_in_taskbar": true,
        "size": {
          "width": 1212,
          "height": 699
        },
        "min_size": {
          "width": 1212,
          "height": 699
        }
      },
      "in_game": {
        "file": "in_game.html",
        "in_game_only": true,
        "focus_game_takeover": "ReleaseOnHidden",
        "focus_game_takeover_release_hotkey": "tempo_league_toggle",
        "resizable": false,
        "transparent": true,
        "override_on_update": true,
        "topmost": true,
        "size": {
          "width": 360,
          "height": 90
        },
        "min_size": {
          "width": 360,
          "height": 90
        }
      }
    },
    "game_targeting": {
      "type": "dedicated",
      "game_ids": [5426]
    },
    "game_events": [5426, 10902],
    "launch_events": [
      {
        "event": "GameLaunch",
        "event_data": {
          "game_ids": [5426]
        },
        "start_minimized": true,
        "include_launchers": true
      }
    ],
    "developer": {
      "enable_auto_refresh": true,
      "reload_delay": 1000,
      "filter": "*.*"
    }
  }
}
